# try and exception

def spam(divide):
    try:
        return 42/divide
    except ZeroDivisionError:
        print('invalid statement')

print(spam(2))
print(spam(12))
print(spam(0))
print(spam(1))


#Another number game


import random
secNum = random.randint(1,20)
print('Iam thinking of the number between 1 and 20')
for guesstaken in range(1,7):
    guess = int(input('Take a guess'))

    if guess < secNum:
        print('You are too low')
    elif guess > secNum:
        print('You are too High')
    else:
        break

if guess == secNum:
    print('Good Job! you guessed the number in ',guesstaken,'guesses!')
else:
    print('Nope you couldnt find the guess')

#just some math
def collatz(number):
    if number%2==0:
         print(number//2)
    else:
        print(3 * number +1)

guess = int(input())
collatz(guess)

