# another number game

import random


def getAnswer(ans):
    if ans ==1 :
        return ('this is awsome')
    if ans ==2 :
        return ('You suck')
    if ans ==3 :
        return ('You are the best')
    if ans ==4 :
        return ('Best Number ever')
    if ans ==5 :
        return ('this is nuts')
    if ans ==6 :
        return ('Jump on me')
    if ans ==7 :
        return ('Free food')
    if ans ==8 :
        return ('Concentrate and try again')
    if ans ==9 :
        return ('you are going to get lucky')
    if ans ==10 :
        return ('Lucky you')

print(getAnswer(random.randint(1,10)))

